{
  "manifest_version": 3,
  "name": "Website Unavailable Helper",
  "version": "1.0",
  "description": "Suggests alternative websites when a domain fails to load",
  
  "permissions": [
    "webRequest",
    "webNavigation",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Website Unavailable Helper"
  }
}
